<config>
  <width>800</width>
  <height>600</height>

  <scale_value>100.0f</scale_value>
  <min_scale>50.0f</min_scale>
  <max_scale>200.0f</max_scale>
  
  <init_column>10</init_column>  
  <init_row>10</init_row>
  
  <min_column>5</min_column>
  <max_column>80</max_column>

  <min_row>5</min_row>
  <max_row>80</max_row>

  <keys>
    <flat>q</flat>
    <wood>w</wood>
    <hill>a</hill>
    <mount>s</mount>
    
    <zoom_in>z</zoom_in>
    <zoom_out>x</zoom_out>

    <left>c</left>
    <right>b</right>
    <top>f</top>
    <bottom>v</bottom>

    <column_plus>t</column_plus>
    <column_minus>r</column_minus>
    <row_plus>d</row_plus>
    <row_minus>e</row_minus>

    <save>o</save>
    <load>l</load>

    <help>h</help>    
  </keys>
</config>
